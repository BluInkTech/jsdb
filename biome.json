{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentWidth": 2,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useLiteralKeys": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"arrowParentheses": "always",
			"bracketSpacing": true
		}
	},
	"overrides": [
		{
			"include": [
				"*.json"
			],
			"formatter": {}
		}
	]
}