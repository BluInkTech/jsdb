{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [
			"dist/*.*",
			"node_modules/*.*",
			"coverage/*.*",
			"coverage-report/*.*",
			".vscode"
		]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useLiteralKeys": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"arrowParentheses": "always",
			"bracketSpacing": true
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
